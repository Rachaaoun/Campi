{% block body %}
    {% include 'produit/_filtre.html.twig' with {form : form} only %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Categorie</th>
                <th>Etat</th>
                <th>Description</th>
                <th>DatePublication</th>
                <th>DateVente</th>
                <th>Image</th>
                <th>Reservation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.categorie }}</td>
                <td>{{ produit.etat }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.datePublication ? produit.datePublication|date('Y-m-d') : '' }}</td>
                <td>{{ produit.dateVente }}</td>
                <td>  <img  src="/uploads/{{produit.image}}" width="100px" alt=""></td>
                <td>{{ produit.reservation }}</td>
                <td>
                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_new') }}">Create new</a>
{% endblock %}
